<div class="flex h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Reset your password</h1>
    </div>
    <div class="mt-8">

      {% form 'reset_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="password">Password</label>
          <input
            id="password"
            type="password"
            name="customer[password]"
            class="w-full relative block px-3 py-2 border"
            placeholder="Password">
        </div>

        <div class="my-2">
          <label for="password_confirmation">Password confirmation</label>
          <input
            id="password_confirmation"
            type="password"
            name="customer[password_confirmation]"
            class="w-full relative block px-3 py-2 border"
            placeholder="Confirm Password">
        </div>

        <button type="submit" class="relative w-full py-2 px-4 font-medium bg-gray-600 hover:gray-900">
          Reset password
        </button>
      {% endform %}
    </div>
  </div>
</div>