<div class="flex h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Create account</h1>
    </div>
    <div class="mt-8">

      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="first_name">First Name</label>
          <input
            id="first_name"
            class="w-full relative block px-3 py-2 border"
            type="text"
            value=""
            name="customer[first_name]"
            autocomplete="first-name"
            placeholder="First Name" />
        </div>
        <div class="my-2">
          <label for="last_name">Last Name</label>
          <input
            id="last_name"
            class="w-full relative block px-3 py-2 border"
            type="text"
            value=""
            name="customer[last_name]"
            autocomplete="family-name"
            placeholder="Last Name" />
        </div>
        <div class="my-2">
          <label for="email">Email Address</label>
          <input
            id="email"
            class="w-full relative block px-3 py-2 border"
            type="email"
            value=""
            name="customer[email]"
            autocomplete="email"
            placeholder="Email Address" />
        </div>
        <div class="my-2">
          <label for="password">Password</label>
          <input
            id="password"
            type="password"
            name="customer[password]"
            value=""
            autocomplete="new-password"
            class="w-full relative block px-3 py-2 border"
            placeholder="Password">
        </div>

        <button type="submit" class="relative w-full py-2 px-4 font-medium bg-gray-600 hover:gray-900">
          Create account
        </button>
      {% endform %}
    </div>
  </div>
</div>