<div class="flex h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email_address">Email adress</label>
          <input
            id="email_address"
            type="email"
            name="customer[email]"
            autocomplete="email"
            class="w-full relative block px-3 py-2 border"
            placeholder="Email address">
        </div>
        {% if form.password_needed %}
          <div class="my-2">
            <label for="password">Password</label>
            <input
              id="password"
              type="password"
              name="customer[password]"
              autocomplete="current-password"
              class="w-full relative block px-3 py-2 border"
              placeholder="Password">
          </div>
        {% endif %}
        <div class="my-2 text-sm">
          <a
            x-on:click="loginForm = false; pwRecoverForm = true"
            href="#"
            class="underline text-gray-500 hover:text-gray-900">Forget your Password?</a>
        </div>
        <div>
          <button type="submit" class="relative w-full py-2 px-4 font-medium bg-gray-600 hover:gray-900">
            Sign in
          </button>
        </div>
      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <hr class="my-12">
      <div>
        <h1 class="mt-6 text-center text-3xl font-bold">Continue as a gues</h1>
      </div>
      {% form 'guest_login' %}
        <div>
          <button type="submit" class="relative w-full py-2 px-4 font-medium bg-gray-600 hover:gray-900">
            Continue
          </button>
        </div>
      {% endform %}
    {% endif %}
  </div>
  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email">Email adress</label>
          <input
            id="email"
            type="email"
            name="email"
            autocomplete="email"
            class="w-full relative block px-3 py-2 border"
            placeholder="Email address">
        </div>
        <div>
          <button type="submit" class="relative w-full py-2 px-4 font-medium bg-gray-600 hover:gray-900">
            Recover password
          </button>
        </div>
        <div class="my-2 mt-3 text-sm">
          <a
            x-on:click="loginForm = true; pwRecoverForm = false"
            href="#"
            class="underline text-gray-500 hover:text-gray-900">Back to Log in?</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>