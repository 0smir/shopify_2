<div class="flex nin-h-rull items-center justufy-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 mx-auto">
    <div>
      <h1 class="mt-6 text-center text-3xl font-bold text-gray-700">Activate</h1>
      <p class="mt-4 text-center">Cteate password to activate account</p>
    </div>

    <div>
      {% form 'activate_customer_password', class: 'space-y-4', id: 'activate_account_form' %}
        {% if form.errors %}
          <div class="relative border border-red-700 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong>Error!</strong>
            <span class="block sm:inline">
              {{ form.errors | default_errors }}
            </span>
          </div>
        {% endif %}

        <div class="mb-4">
          <label for="password">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            placeholder="New password"
            class="relative block w-full px-3 py-2 border placeholder-gray-300 text-gray-700">
        </div>
        <div class="mb-4">
          <label for="confirm_password">Confirm your password</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="confirm_password"
            placeholder="Confirm password"
            class="relative block w-full px-3 py-2 border placeholder-gray-300 text-gray-700">
        </div>
        <div class="block md:flex gap-2">
          <button type="submit" class="w-full border px-4 py-2 text-sm font-medium text-white bg-gray-700 hover:bg-gray-900">
            Activate account
          </button>
          <button
            type="submit"
            name="decline"
            class="w-full border px-4 py-2 text-sm font-medium border text-gray-700 bg-white hover:text-white hover:bg-gray-700">
            Decline Invitation
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>

