<div class="flex flex-col items-center my-8">
  {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-8 md:my-16">
      {{ section.settings.title }}
    </h1>
  {% endif %}

  {% form 'contact' %}
    {% if form.errors %}
      <div class="border p-5">
        <div class="flex flex-wrap items-center w-full my-3 text-red-500">
          <span>{% render 'icon' with 'icon-faile' %}</span>
          <span class="ml-2">On no! Something goes wrong! Your message was not sent!</span>
          <ul class="flex w-full px-3 mb-4 ml-7 list-decimal">
            {% for error in form.errors %}
              <li>{{ form.errors.messages[error] }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-3 text-lime-500">
        <span>{% render 'icon' with 'icon-success' %}</span>
        <span class="ml-2">Your message is sent successfully!</span>
      </div>
    {% endif %}

    <div class="w-6xl mx-auto flex-1 justify-center items-center px-4">
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label for="contact_name" class="uppercase text-xs text-gray-500 font-medium">Name</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            type="text"
            name="contact[name]"
            id="contact_name"></div>
        <div class="px-3 md:w-1/2">
          <label for="contact_email" class="uppercase text-xs text-gray-500 font-medium">Email</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            type="text"
            name="contact[email]"
            id="contact_email"></div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label for="contact_message" class="uppercase text-xs text-gray-500 font-medium">Message</label>
          <textarea
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            name="contact[body]"
            id="contact_message"
            cols="30"
            rows="10"></textarea>
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <input
            type="submit"
            value="Submit Message"
            class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700">
        </div>
      </div>



    </div>

  {% endform %}

</div>

{% schema %}
  {
    "name": "Contact form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact form"
      }
    ]
  }
{% endschema %}